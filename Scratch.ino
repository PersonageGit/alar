void loop() {
s = 0;
if (ad.search(addr))
{
for (o = 0; o < 2; o++)
{
if (keys[o][0] == addr[0]
&& keys[o][1] == addr[1]
&& keys[o][2] == addr[2]
&& keys[o][3] == addr[3]
&& keys[o][4] == addr[4]
&& keys[o][5] == addr[5]
&& keys[o][6] == addr[6]
&& keys[o][7] == addr[7])
{
s = 1;
}
}
if (s > 0)
{
logicll();
}
else
{
}
ad.reset_search();
delay(500);
}
}

void logicll()
{
int state = eeprom_read_byte(0);
Serial.println(state);
if (state == 1)
{
alarm_off();
}
else if (state == 2)
{
outdoor_light_on();
}
else if (state == 3)
{
outdoor_light_off();
}
else if (state == 4)
{
alarm_on();
}
return;
}

